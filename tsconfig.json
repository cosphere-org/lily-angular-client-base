{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib" : ["es2015", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "noStrictGenericChecks": true,
    "typeRoots": [
      "../../node_modules/@types/"
    ],
    "types" : [
      "node",
      "jasmine"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
